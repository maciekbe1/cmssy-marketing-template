{
  "version": 2,
  "public": true,
  "github": {
    "enabled": false
  },
  "builds": [
    {
      "src": "packages/**/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/@(.*)/(.*)/(.*)/(.*)",
      "dest": "/packages/$1/$2/dist/$4",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, OPTIONS"
        }
      ]
    }
  ]
}
